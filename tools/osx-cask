#!/usr/bin/env sh
# Install Homebrew packages and apps I commonly use.

# Check for Homebrew and install if we don't have it
if test ! $(which brew); then
  read -p "Homebrew is not installed. Would you like to install it? (y/n): [n]" -n 1 -r; echo
  if [ "$REPLY" = "y" ]; then
    ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
  else
    exit
  fi
fi

# System Settings
brew install betterdisplay
brew install fontsmoothingadjuster
brew install jordanbaird-ice
brew install monitorcontrol
brew install tg-pro

# Utilities
brew install appcleaner
brew install arq
brew install raycast
brew install topnotch

# Fonts
brew install font-cascadia-code
brew install font-fira-code
brew install font-hack-nerd-font
brew install font-iosevka
brew install font-jetbrains-mono

# Terminal
brew install iterm2
brew install wezterm

# Security & safety
brew install 1password
brew install silentknight
brew install suspicious-package

# Browsers
brew install firefox
brew install vivaldi

# Network
brew install lulu
brew install transmission
brew install tripmode
brew install windows-app

# Files & storage
brew install disk-inventory-x
brew install eagle
brew install forklift
brew install synology-drive

# Notes and tasks
brew install goodnotes
brew install kindle
brew install obsidian
brew install reader
brew install readwise-ibooks
brew install todoist

# Files formats
brew install airflow
brew install iina
brew install imageoptim
brew install plex
brew install roon
brew install vlc
brew install xld

# Communication
brew install mattermost
brew install microsoft-outlook
brew install telegram
brew install zoom
brew install whatsapp

# Development
brew install cursor
brew install devcleaner
brew install docker
brew install fork
brew install jetbrains-toolbox
brew install ollama
brew install postico
brew install rapidapi
brew install visual-studio-code
brew install yaak
brew install zed

# Design & prototyping
brew install colorpicker-propicker
brew install figma
brew install miro

# Misc
brew install obs
brew install whisky
